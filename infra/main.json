{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.36.1.42791",
      "templateHash": "7647372281336900847"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "sqlServerName": {
      "type": "string",
      "defaultValue": "chainlit-sql-server"
    },
    "sqlAdminUsername": {
      "type": "string",
      "defaultValue": "tdadmin"
    },
    "sqlAdminPassword": {
      "type": "securestring"
    },
    "databaseName": {
      "type": "string",
      "defaultValue": "chainlitdb"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2022-02-01-preview",
      "name": "[parameters('sqlServerName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "administratorLogin": "[parameters('sqlAdminUsername')]",
        "administratorLoginPassword": "[parameters('sqlAdminPassword')]",
        "version": "12.0"
      }
    },
    {
      "type": "Microsoft.Sql/servers/administrators",
      "apiVersion": "2022-02-01-preview",
      "name": "[format('{0}/{1}', parameters('sqlServerName'), 'ActiveDirectory')]",
      "properties": {
        "administratorType": "ActiveDirectory",
        "login": "sql-admins",
        "sid": "4f7380aa-3fed-4f3e-a4e0-49af84d53987",
        "tenantId": "4a302c0b-d1fa-49e5-bc80-a008b7ca6eb4"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
      ]
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "apiVersion": "2022-02-01-preview",
      "name": "[format('{0}/{1}', parameters('sqlServerName'), 'AllowAllWindowsAzureIps')]",
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
      ]
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2022-02-01-preview",
      "name": "[format('{0}/{1}', parameters('sqlServerName'), parameters('databaseName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 10737418240,
        "autoPauseDelay": 30,
        "minCapacity": 1,
        "zoneRedundant": false,
        "sampleName": "AdventureWorksLT"
      },
      "sku": {
        "name": "GP_S_Gen5_1",
        "tier": "GeneralPurpose",
        "family": "Gen5",
        "capacity": 1
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
      ]
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "chainlit-appserviceplan",
      "location": "[parameters('location')]",
      "sku": {
        "name": "B1",
        "tier": "Basic"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "chainlit-webapp",
      "location": "[parameters('location')]",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', 'chainlit-appserviceplan')]",
        "httpsOnly": true
      },
      "tags": {
        "azd-service-name": "chainlit-webapp"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', 'chainlit-appserviceplan')]"
      ]
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2023-04-15",
      "name": "chainlit-cosmosdb",
      "location": "[parameters('location')]",
      "kind": "GlobalDocumentDB",
      "properties": {
        "databaseAccountOfferType": "Standard",
        "locations": [
          {
            "locationName": "[parameters('location')]",
            "failoverPriority": 0,
            "isZoneRedundant": false
          }
        ],
        "consistencyPolicy": {
          "defaultConsistencyLevel": "Session"
        },
        "capabilities": [
          {
            "name": "EnableServerless"
          }
        ]
      },
      "tags": {
        "azd-service-name": "cosmosdb"
      }
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers",
      "apiVersion": "2022-12-01",
      "name": "chainlit-postgres",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "pgadmin",
        "administratorLoginPassword": "[parameters('sqlAdminPassword')]",
        "version": "15",
        "storage": {
          "storageSizeGB": 32
        },
        "backup": {
          "backupRetentionDays": 7,
          "geoRedundantBackup": "Disabled"
        },
        "highAvailability": {
          "mode": "Disabled"
        },
        "createMode": "Default"
      },
      "sku": {
        "name": "Standard_B1ms",
        "tier": "Burstable"
      },
      "tags": {
        "azd-service-name": "postgresql"
      }
    }
  ],
  "outputs": {
    "sqlServerName": {
      "type": "string",
      "value": "[parameters('sqlServerName')]"
    },
    "sqlAdminUsername": {
      "type": "string",
      "value": "[parameters('sqlAdminUsername')]"
    },
    "sqlDbName": {
      "type": "string",
      "value": "[parameters('databaseName')]"
    }
  }
}